                        android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="195dp"
                            android:layout_height="225dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cat2" />

                        <ImageButton
                            android:layout_width="195dp"
